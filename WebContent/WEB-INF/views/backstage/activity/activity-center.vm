<!DOCTYPE HTML>
<html>
<head>
	<meta charset="UTF-8">
	<title>活动管理中心</title>
	<link type="text/css" href="/resources/css/after.css" rel="stylesheet" />
	<link type="text/css" href="/resources/js/jqzoom_ev-2.3/css/jquery.jqzoom.css" rel="stylesheet" />
</head>
<body>
	<div class="warp">
		<!--头部-->
		#parse("/backstage/layout/logo.vm")
		<!--内容-->
		<div class="container fn-clear">
			#parse("/backstage/layout/left.vm")
			<div class="main-content fn-right">
				<div class="mc">
					<div class="top">
						<p><a href="">活动管理中心</a> > 活动管理</p>
					</div>
					<div class="t-box">
						<div class="p-box pages-t fn-clear">
							<a href="/backstage/addActivity" class="p-btn addUser">新增活动</a>
							#parse("/backstage/page/page.vm")
						</div>
						
						<table class="m-table">
							<tr>
								<th width="80">活动名称</th>
								<th width="200">派送礼品代号</th>
								<th width="120">开始时间</th>
								<th width="120">结束时间</th>
								<th width="80">状态</th>
								<th width="120">操作</th>
							</tr>
						#if($page.result.size()==0)
            				<tr class="even">
                				<td colspan=7 align=center>暂时没有记录</td>
                			</tr>
						#end
						#foreach($info in $page.result)
							<tr>
								<td>$!{info.activityName}</td>
								<td>$!{info.sendGiftCode}</td>
								<td>$!{dateUtil.simpleFormat($!{info.startTime})}</td>
								<td>$!{dateUtil.simpleFormat($!{info.endTime})}</td>
								<td>
									#if($!{info.status}==1)
										未开始
									#elseif($!{info.status}==2)
										已开始
									#elseif($!{info.status}==3)
										已结束
									#end	
								</td>
								<td><a href="/backstage/updateActivity?tblBaseId=$!{info.tblBaseId}">修改</a> | <a name="online_link" data="$!{info.tblBaseId}" href="javascript:;">开始活动</a> | <a name="offline_link" data="$!{info.tblBaseId}" href="javascript:;">结束活动</a></td>
								
							</tr>
						#end
						</table>
						<input type="hidden" value="JG" data="userType"/>
						<div class="p-box pages-b fn-clear">
							<a href="/backstage/popHelp/addHelp" class="p-btn addUser">新增活动</a>
							#parse("/backstage/page/page.vm")
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>	
	<script type="text/javascript">
    	var $_GLOBAL = {};
    </script>
	<script type="text/javascript" src="/resources/js/lib/jquery-1.7.2.min.js"></script>
	<script type="text/javascript" src="/resources/js/lib/sea.js"></script>
	<script type="text/javascript">
    	seajs.use($_GLOBAL.mode + 'activityCenter.js');
		function toPage(totalPage, pageNo){
    		if(totalPage<pageNo){
    			return false;
    		}
			var url = "/backstage/activityCenter?"
			+"pageSize=$!{page.pageSize}&pageNo="+pageNo;
			window.location.href=url;
		}
    </script>
</body>
</html>