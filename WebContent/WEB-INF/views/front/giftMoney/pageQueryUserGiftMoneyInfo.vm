<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
    <title>账户首页</title>
    <link type="text/css" href="/styles/style.css" rel="stylesheet" />
</head>
<body >
<!--头部-->
    #parse("/front/index/common/header-yrd.vm")
<div class="home-section_bd pt20">
    <div class="blank20"></div>
    <div class="bd-box container fn-clear">
        #parse("/front/user/common/left1.vm")
        <div class="m-content fn-right">
            <div class="m-content-box">
                <div class="title1 mt10"><span>红包查询</span></div>
                <div class="blank20"></div>
                <div class="border-b">
                    <!--查询条件-->
                    <form action="/userGiftMoney/pageQuery" method="post">
                       <div class="mb-link fn-clear">
                                           <span class="fn-time">
                            <input type="date" value="$!{queryConditions.startDate}" name="startDate" class="fn-text w90">
                            <img src="$!{rc.contextPath}/resources/images/common/time-ico.gif" alt="时间" class="time-img">
                        </span>
                            <em>-</em>
                        <span class="fn-time">
                            <input type="date"  value="$!{queryConditions.endDate}" name="endDate"   class="fn-text w90">
                            <img src="$!{rc.contextPath}/resources/images/common/time-ico.gif" alt="时间" class="time-img">
                        </span>
                            <a href="javascript:;" class="fn-h-btn ml5"><button type="submit" >筛选 </button></a>

                        </div>
                    </form>
                    <!--列表-->
                    <table cellpadding="0" cellspacing="0" border="0" width="100%" class="mtable-list">
                        <tr>
                            <th>类型</th>
                            <th>所属红包</th>
                            <th>领取金额(元)</th>
                            <th>已使用金额(元)</th>
                            <th>生效时间</th>
                            <th>截止时间</th>
                            <th>红包用途</th>
                            <th>状态</th>
                            <th>使用详情</th>
                        </tr>
                        #if($page.result.size()==0)
                            <tr class="even">
                                <td colspan=8 align=center>未领取红包</td>
                            </tr>
                        #end
                        #foreach($info in $page.result)
                            <tr>
                                <td>$!{info.type.message}</td>
                                <td>$!{info.giftName}</td>
                                <td>$!{info.amount.toStandardString()}</td>
                                <td>$!{info.usedAmount.toStandardString()}</td>
                                <td>$!dateUtil.simpleFormat($!{info.startDate})</td>
                                <td>$!dateUtil.simpleFormat($!{info.endDate})</td>
                                <td> 投资    </td>
                                <td>#if($!{info.status}=="NORMAL") 未使用 #elseif($!{info.status}=='EXPIRE') 过期 #else 已使用  #end</td>
                                <td><a href="/userGiftMoney/pageQueryUse?giftId=$!{info.giftTradeId}">使用详情</a></td>

                            </tr>
                        #end
                    </table>
                    <!--分页-->
                    <div class="fn-tb-bottom fn-clear">
                        #parse("/backstage/page/page.vm")
                    </div>
                </div>
                <div class="blank30"></div>
            </div>
        </div>
        <div class="blank50"></div>
    </div>


    #parse("/front/index/common/footer-yrd.vm")



    <script type="text/javascript">
        var $_GLOBAL = {};
    </script>
    <script type="text/javascript" src="/resources/js/lib/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/resources/js/lib/sea.js"></script>
    <script type="text/javascript">
        seajs.use($_GLOBAL.mode + 'userHome');
        function toPage(totalPage, pageNo){
            if(totalPage<pageNo){
                return false;
            }
            var url = "/userGiftMoney/pageQuery"
                    +"?startDate=$!{queryConditions.startDate}"
                    +"&endDate=$!{queryConditions.endDate}"
                    +"&pageSize=$!{page.pageSize}&pageNo="+pageNo;
            window.location.href=url;
        }
    </script>

</body>
</html>