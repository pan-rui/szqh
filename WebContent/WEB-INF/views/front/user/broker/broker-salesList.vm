<!DOCTYPE HTML>
<html>
<head>
	<meta charset="UTF-8">
	<title>账户首页</title>
	<link type="text/css" href="/styles/style.css" rel="stylesheet" />
</head>
<body >
	<!--头部-->
	#parse("/front/index/common/header-yrd.vm")
	
  <div class="blank20"></div>
  <div class="bd-box container fn-clear">
   #parse("/front/user/common/left1.vm")
<div class="m-content fn-right">
        	<div class="m-content-box">
        		<div class="title1 mt10"><span>业务管理</span>
					<div class="r-kyye"> <strong>可用余额：</strong> <span>￥$!{yjfAccountInfo.availableBalance.toStandardString()}</span> <a href="/userManage/topUp/withholdingIndex">充值</a></div>
				</div>
                <div class="blank20"></div>
                <div class="border-b">
            <!--查询条件-->
			<form action="/investorManager/salesList" method="post"  name="gform">
			
			
                
                <div class="fn-condition mt15 fn-clear">
						<dl class="fn-clear mb20">
							<dt style="text-align:center">投资人：</dt>
							<dd>
								<input type="text" class="fn-text w120" value="$!{request.getParameter('originalRealName')}" name="originalRealName"/>
							</dd>


                       <input type="hidden"  name="pageSize"  value="$!{pageParam.pageSize}"/>
			           <input type="hidden"  name="pageNo"  value="$!{pageParam.pageNo}"/>  
                     
							<dt style="text-align:center">投资日期：</dt>
							<dd>
								<span class="fn-time">
								
								 <input type="date" value="$!{queryConditions.startDate}" name="startDate" class="fn-text w90"/>
                                 <img src="$!{rc.contextPath}/resources/images/common/time-ico.gif" alt="时间" class="time-img"/>     
                                </span>
                                <em>-</em>
                                <span class="fn-time">
                                 <input type="date" value="$!{queryConditions.endDate}" name="endDate"   class="fn-text w90"/>
                                 <img src="$!{rc.contextPath}/resources/images/common/time-ico.gif" alt="时间" class="time-img"/> 
                                </span>
                                
                                <a href="javascript:doSubmit();" class="fn-h-btn ml5"> <span>筛选</span></a>
                                
							</dd>					
						</dl>
                </div>
                
                   
      	     </form>      
      	           <!--列表-->       
                    <table  class="mtable-list" border="0" cellspacing="0" cellpadding="0"  >
                        <tbody><tr>
                         	<td width="19%" style="text-align:center">交易名称</td>
							<td width="10%">投资人</td>
							<td width="12%">投资金额(元)</td>
							<td width="12%">投资日期</td>
							<td width="12%">成立日期</td>
							<td width="12%">到期日期</td>
							<td width="12%">推荐费用(元)</td>
							<td width="13%" class="50">投资状态</td>
						
                        </tr>
                        
                        #if($!page.result.size()==0)
		    				<tr>
		        				<td colspan=5 align=center>暂时没有交易记录</td>
		        			</tr>
						#end
                        
                       
                       #foreach($info in $page.result)
						<tr>
	                        <td>&nbsp;<a href="/investorManager/salesDetails/$!{info.tradeId}/$!{info.tradeDetailId}?investDetailId=$!{info.note}">$stringUtil.subString($!{info.tradeName},10,"..")</a></td>
							<td>$!{info.originalRealName}</td>
	                        <td><span class="ft-f60">$!{info.originalAmount.toStandardString()}</span></td>
	                        <td>$!dateUtil.dtSimpleFormat($!{info.createDate})</td>
							#if($!{info.tradeEffectiveDate})
							 <td>$!dateUtil.dtSimpleFormat($!{info.tradeEffectiveDate})</td>
							#else
								<td>暂无</td>
							#end
							#if($!{info.tradeExpireDate})
							 <td>$!dateUtil.dtSimpleFormat($!{info.tradeExpireDate})</td>
							#else
								<td>暂无</td>
							#end
	                        <td><span class="ft-f60">$!{info.benefitAmount.toStandardString()}</span></td>
							<td>$!{info.tradeStatus.investorStatus}
															</td>
	                       
						</tr>
					#end

                    </tbody></table>
                    
                    <div style="font-weight:bold;font-size:18px; text-align: right; padding: 10px;">
						个人收益合计:<span class="ft-f60">￥$!{allAmount}</span>元
					</div>
                    
                    
                   <!--分页-->
					<div class="fn-tb-bottom fn-clear">
						#parse("/backstage/page/page.vm")
					</div>
                </div>
                <div class="blank30"></div>
            </div>
</div>
        
        
        
  <div class="blank50"></div>
  </div>


#parse("/front/index/common/footer-yrd.vm")	


	
<script type="text/javascript">
    	var $_GLOBAL = {};
    </script>
	<script type="text/javascript" src="/resources/js/lib/jquery-1.7.2.min.js"></script>
	<script type="text/javascript" src="/resources/js/lib/sea.js"></script>

	
	<script type="text/javascript">
    	seajs.use($_GLOBAL.mode + 'login1');
		
		
		function toPage(totalPage, pageNo){
    		if(totalPage<pageNo){
    			return false;
    		}
			$('[name=pageSize]').val($!{page.pageSize}) ;
			$('[name=pageNo]').val(pageNo);
			$('form[name=gform]').attr('action', '$!{rc.contextPath}/investorManager/salesList?status=00');
			 document.gform.submit();
		}
		
		
		function doSubmit() {
		    $('[name=pageSize]').val($!{page.pageSize}) ;
			$('[name=pageNo]').val(1);
			document.gform.submit();
		}
		
		
    </script>

</body>
</html>